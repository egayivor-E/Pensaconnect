# Production Environment
FLASK_ENV=production

# Database (use real credentials from your cloud provider)
DATABASE_URL=postgresql://pensaconnect_prod_user:${DB_PASSWORD}@${DB_HOST}:5432/pensaconnect_prod

# Secrets (should be generated secrets from your deployment platform)
SECRET_KEY=${PRODUCTION_SECRET_KEY}
JWT_SECRET_KEY=${PRODUCTION_JWT_SECRET}

# Redis
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Monitoring
SENTRY_DSN=${SENTRY_DSN}