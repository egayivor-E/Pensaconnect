# ================================
# BACKEND CONFIGURATION
# ================================
BACKEND_URL=https://pensaconnect.onrender.com
API_PREFIX=api/v1
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=2097152
CORS_ORIGINS=https://pensaconnect-frontend.onrender.com,https://pensaconnect.onrender.com

# ================================
# DATABASE CONFIGURATION
# ================================
# Render will set DATABASE_URL automatically from environment
# Keep this for local development only
# DATABASE_URL=sqlite:///instance/pensaconnect.db

# ================================
# SECURITY & AUTHENTICATION
# ================================
# These should be set in Render environment variables, not in .env
# SECRET_KEY=your-super-secret-key-change-in-production
# JWT_SECRET_KEY=jwt-super-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# ================================
# LIVE STREAM & WEBSOCKET CONFIGURATION
# ================================
YOUTUBE_VIDEO_ID=XsAks3LlbqA
WEBSOCKET_URL=wss://pensaconnect.onrender.com
SOCKETIO_PATH=/socket.io
LIVE_STREAM_GROUP_ID=1

# CORS for WebSocket
CORS_ORIGINS=https://pensaconnect-frontend.onrender.com,https://pensaconnect.onrender.com
WEBSOCKET_CORS_ORIGINS=https://pensaconnect-frontend.onrender.com,https://pensaconnect.onrender.com

# ================================
# FEATURE FLAGS
# ================================
ENABLE_LIVE_CHAT=true
ENABLE_MESSAGE_MODERATION=true
ENABLE_TYPING_INDICATORS=true
ENABLE_READ_RECEIPTS=true
ENABLE_MEMBER_PRESENCE=true
ENABLE_CHAT_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=false  # Disable on free tier

# ================================
# RATE LIMITING & MESSAGING
# ================================
MAX_MESSAGE_LENGTH=1000
MESSAGE_RATE_LIMIT_SECONDS=2
MAX_MESSAGES_PER_MINUTE=30
MESSAGE_POLLING_INTERVAL=5
MESSAGE_QUEUE_SIZE=100
MESSAGE_RETENTION_DAYS=30

# ================================
# CONNECTION SETTINGS
# ================================
MAX_CONNECTION_RETRIES=5
CONNECTION_RETRY_DELAY=3
SOCKET_PING_TIMEOUT=60
SOCKET_PING_INTERVAL=25
MAX_HTTP_BUFFER_SIZE=1000000

# ================================
# SECURITY & ACCESS
# ================================
ALLOW_ANONYMOUS_CHAT=false
REQUIRE_EMAIL_VERIFICATION=false
REQUIRE_ACCOUNT_CREATION=true
ALLOW_FILE_UPLOADS=false  # Disable on free tier (no persistent storage)
ALLOW_IMAGE_UPLOADS=false # Disable on free tier
MAX_FILE_UPLOAD_SIZE=5242880

# ================================
# PERFORMANCE & MONITORING
# ================================
LOG_CHAT_MESSAGES=true
MAX_CONCURRENT_CONNECTIONS=100
MESSAGE_CACHE_SIZE=1000
ENABLE_PERFORMANCE_MONITORING=false  # Disable on free tier
LOG_LEVEL=INFO
DEBUG=false

# ================================
# CONTENT MODERATION
# ================================
ENABLE_CONTENT_FILTER=true
ENABLE_AUTO_MODERATION=true
BLOCKED_WORDS=
MODERATION_ACTION=warn

# ================================
# NOTIFICATIONS
# ================================
NOTIFICATION_SOUND=true
NOTIFICATION_DURATION=5000
ENABLE_DESKTOP_NOTIFICATIONS=false  # Web push disabled on free tier
ENABLE_EMAIL_NOTIFICATIONS=false    # Disable on free tier

# ================================
# ADMIN & MODERATION
# ================================
ADMIN_EMAIL=gayivore@mail.com
SUPPORT_EMAIL=gayivore@mail.com
MODERATOR_ROLE_ENABLED=true
AUTO_APPROVE_MESSAGES=true

# ================================
# CACHE & SESSION CONFIGURATION
# ================================
CACHE_TYPE=simple  # Use simple cache on Render free tier
SESSION_TYPE=filesystem
SESSION_TIMEOUT=3600
# REDIS_URL=redis://localhost:6379/0  # Comment out - no Redis on free tier

# ================================
# EXTERNAL SERVICES
# ================================
ENABLE_EMAIL_SERVICE=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# ================================
# FLASK ENVIRONMENT
# ================================
FLASK_ENV=production
HOST=0.0.0.0
PORT=10000  # Render uses port 10000
RUN_FRONTEND=false

# ================================
# CELERY (BACKGROUND TASKS)
# ================================
# CELERY_BROKER_URL=redis://localhost:6379/0  # Comment out - no Redis
# CELERY_RESULT_BACKEND=redis://localhost:6379/0  # Comment out
ENABLE_BACKGROUND_TASKS=false  # Disable on free tier

# ================================
# RENDER SPECIFIC
# ================================
RENDER=true
CREATE_ADMIN=false  # Set to true only for first deployment